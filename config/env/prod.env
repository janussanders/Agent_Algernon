# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=${AWS_ACCOUNT_ID}
ECR_REPOSITORY=rag-app
ECS_CLUSTER=rag-cluster
ECS_SERVICE=rag-service
ECS_TASK_DEFINITION=rag-task

# Application Configuration
DEPLOYMENT_TYPE=ecs
ENVIRONMENT=production
WEBSOCKET_API_URL=wss://${ALB_DNS_NAME}

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_HTTP_PORT=6333
QDRANT_HTTPS=true
QDRANT_VERIFY_SSL=true
ECR_QDRANT_IMAGE=qdrant/qdrant:latest

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_ENABLE_WEBSOCKET_COMPRESSION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# API URLs (will be populated by deployment script)
SERVICE_URL=
QDRANT_HOST=qdrant
WEBSOCKET_API_URL=

# Production Settings
DEBUG=false
STREAMLIT_DEBUG=false 